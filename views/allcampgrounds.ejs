<% layout('layout/boilerplate')%>


<div id="cluster-map" ></div>
    <h1>Campgrounds</h1>  

    <form action="/campgrounds/new">
        <button class="btn btn-sm btn-primary m-2">New Campground</button>
    </form>  
    <ul>
        <% for(let city of campgrounds.reverse()) {%>
            <div class="card mb-3" >
                <div class="row ">
                    <div class="col-md-4 ">
                        <%  if(city.images.length){  %>
                        <img crossorigin="anonymous" src="<%=city.images[0].url%>" alt="<not displaying!!>" class="img-fluid">
                            <% }else{ %>
                        ] <img crossorigin="anonymous" src="https://res.cloudinary.com/dfcnf45hr/image/upload/v1687683857/YelpCamp/ltdmamvm3jcb8oz2i4wf.jpg" alt="<not displaying!!>" class="img-fluid"> 
                            <% } %>    
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%=city.title %></h5>
                            <p class="card-text"><%= city.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= city.location %></small>
                            </p>
                            <a class="btn btn-primary" 
                            href="/campgrounds/<%= city._id %>">View campground</a>
                        </div>

                    </div>
                </div>
            </div>
            <% } %>
    </ul>

    <script>
        const mapToken='<%-process.env.MAPBOX_TOKEN%>';
        const campgrounds = {features: <%-JSON.stringify(campgrounds)%>};
     </script>

    <script src="/js/clusterMap.js"></script>